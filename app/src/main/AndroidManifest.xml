<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ncsu.ece463.project24.dptworkout">

    <application
        android:allowBackup="true"
        android:icon="@drawable/exercise_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WorkoutActivity" />
        <activity android:name=".CustomizeActivity" />
        <activity android:name=".LogActivity" />
        <activity
            android:name=".PairActivity"
            android:label="@string/title_activity_pair"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OptionsActivity"
            android:label="@string/title_activity_options"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>