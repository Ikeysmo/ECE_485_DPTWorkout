<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Squats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView53" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/squat1"
                android:id="@+id/imageView13" />

            <TextView
                android:text="Stand up straight like in image above"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView50" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/squat2"
                android:id="@+id/imageView14" />

            <TextView
                android:text="Begin to bend your legs, keeping your back straight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView51" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/squat3"
                android:id="@+id/imageView15" />

            <TextView
                android:text="Once your thighs are parallel to floor, come back up. Repeat."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView52" />

        </LinearLayout>



    </ScrollView>
</LinearLayout>