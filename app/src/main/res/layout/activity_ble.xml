<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ncsu.ece463.project24.dptworkout.BLEActivity">

    <TextView
        android:text="BLE PAD LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:id="@+id/textView11"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp"
        android:id="@+id/ble_angle_right"
        android:textSize="50dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ble_angle_left"
        android:layout_marginBottom="124dp"
        android:layout_above="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <TextView
        android:text="BLE PAD RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="83dp"
        android:id="@+id/textView17"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/ble_angle_right"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:text="Left Pad:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginStart="7dp"
        android:id="@+id/textView30" />

    <TextView
        android:text="Right Pad:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rpadstatus"
        android:layout_toStartOf="@+id/rpadstatus"
        android:layout_marginEnd="8dp"
        android:id="@+id/textView31" />

    <TextView
        android:text="Disconnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lpadstatus"
        android:textColor="@color/DarkRed"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView30"
        android:layout_marginStart="7dp" />

    <TextView
        android:text="Disconnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rpadstatus"
        android:textColor="@color/DarkRed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
